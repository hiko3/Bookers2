<div class="container">
	<div class="row">
		<div class="col-sm-3">
<%= render 'new/new',book:@book,user:@user %>
		</div>

<div class="col-sm-9">
<h2> Users</h2>
<table class="table table-striped">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th= colspan="3"></th>
		</tr>
	</thead>

	<tbody>
	 <% @users.each do |user| %>
		<tr>
			<td><%= attachment_image_tag user,:profile_image,:fill, 100, 100,fallback:"no-image.png",size: '100x100'%></td>
			<td><%= user.name %></td>
			<td><%= link_to "Show",user_path(user) %></td>
		</tr>
	 <% end %>
	</tbody>
</table>
</div>
	</div>
</div>