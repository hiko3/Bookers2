
<div class="container">
  <div class="row">
	<div class="col-sm-3">
<%= render 'new/new',book:@new_book,user:@user %>
	</div>

<div class="col-sm-9">
<h1>Book detail</h1>

<table class="table table-striped">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Body</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
			<tr>
				<td><%= attachment_image_tag @user,:profile_image,:fill, 100, 100,fallback:"no-image.png",size: '50x50'%></td>
				<td><%= @book.title %></td>
				<td><%= @book.body %></td>
				<% if@book.user == current_user %>
				<td><%= link_to 'Edit', edit_book_path(@book) %></td>
				<% end %>
				<% if@book.user == current_user %>
				<td><%= link_to 'Destroy',book_path(@book),method: :delete, data:{confirm: '本当に消しますか？'} %></td>
				<% end %>
			</tr>
			<tr>
				<td><%= link_to @user.name,user_path(@user) %></td>
			</tr>
	</tbody>
</table>
</div>
  </div>
</div>