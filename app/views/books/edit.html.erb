
<h2> Editing Book </h2>

<%= form_for(@book) do |f| %>
	<div class = "field">
		<label for = "book_title"> Title</label>
			<%= f.text_field :title %>
	</div>

	<div class = "field">
		<label for = "book_opinion"> Opinion</label>
			<%= f.text_area :body %>
	</div>

	<div class = "action">
			<%= f.submit "Update Book", class: "btn-primary" %>
	</div>

<% end %>